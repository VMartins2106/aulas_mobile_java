<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/usuario"
        android:layout_width="300dp"
        android:layout_height="55dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:hint="Informe o usuário" />

    <EditText
        android:id="@+id/senha"
        android:layout_width="300dp"
        android:layout_height="55dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:hint="Informe a senha"
        android:layout_below="@id/usuario"/>

    <EditText
        android:id="@+id/nivel"
        android:layout_width="300dp"
        android:layout_height="55dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:hint="Informe o nível"
        android:layout_below="@id/senha"/>

    <Button
        android:id="@+id/cadastrar"
        android:layout_width="120dp"
        android:layout_height="55dp"
        android:text="Cadastro"
        android:textAllCaps="true"
        android:layout_marginTop="310dp"
        android:layout_marginStart="10dp"
        android:backgroundTint="@color/black"/>

    <Button
        android:id="@+id/excluir"
        android:layout_width="120dp"
        android:layout_height="55dp"
        android:layout_marginStart="130dp"
        android:layout_marginTop="310dp"
        android:backgroundTint="@color/black"
        android:layout_centerHorizontal="true"
        android:text="Excluir"
        android:textAllCaps="true" />

    <Button
        android:id="@+id/atualizar"
        android:layout_width="120dp"
        android:layout_height="55dp"
        android:layout_marginStart="280dp"
        android:layout_marginTop="310dp"
        android:backgroundTint="@color/black"
        android:text="Atualizar"
        android:textAllCaps="true" />

    <Button
        android:id="@+id/limpar"
        android:layout_width="120dp"
        android:layout_height="55dp"
        android:text="Limpar"
        android:textAllCaps="true"
        android:layout_marginTop="370dp"
        android:layout_marginStart="10dp"
        android:backgroundTint="@color/black"/>

    <Button
        android:id="@+id/consultar_um"
        android:layout_width="120dp"
        android:layout_height="55dp"
        android:text="Consultar 1"
        android:textSize="11dp"
        android:layout_centerHorizontal="true"
        android:textAllCaps="true"
        android:layout_marginTop="370dp"
        android:backgroundTint="@color/black"/>

    <Button
        android:id="@+id/consultar_dois"
        android:layout_width="120dp"
        android:layout_height="55dp"
        android:text="Consultar 2"
        android:textAllCaps="true"
        android:layout_marginTop="370dp"
        android:layout_marginStart="280dp"
        android:textSize="11dp"
        android:backgroundTint="@color/black"/>

    <ListView
        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:layout_marginTop="460dp" />


</RelativeLayout>